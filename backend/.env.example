# ============================================
# AI-HTTP Backend Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=4000

# ============================================
# Database (Supabase PostgreSQL)
# ============================================
# Get these from: Supabase Dashboard > Settings > Database > Connection string

# For Prisma with connection pooling (PgBouncer)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection for migrations
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# ============================================
# Redis (Optional - for caching & queues)
# ============================================
# Local: redis://localhost:6379
# Render Redis: Get from Render Dashboard
REDIS_URL="redis://localhost:6379"

# ============================================
# Authentication
# ============================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-min-32-characters"
JWT_EXPIRES_IN="7d"

# ============================================
# Encryption
# ============================================
# 32-character key for encrypting sensitive data (API keys)
# Generate: openssl rand -hex 16
ENCRYPTION_KEY="your-32-character-encryption-key"

# ============================================
# AI Integration (Anthropic Claude)
# ============================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-api03-..."

# ============================================
# n8n Integration (for testing)
# ============================================
N8N_API_URL="https://your-n8n-instance.com/api/v1"
N8N_API_KEY="your-n8n-api-key"

# ============================================
# CORS & Frontend
# ============================================
# In production, set to your Vercel URL
FRONTEND_URL="http://localhost:3000"
# Comma-separated list of allowed origins for CORS
# IMPORTANT: Add your Vercel frontend URL here
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,https://a-i-https.vercel.app"

# ============================================
# Email (Optional - for password reset, etc.)
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="AI-HTTP <noreply@ai-http.com>"

# ============================================
# Monitoring (Optional)
# ============================================
SENTRY_DSN="https://xxx@sentry.io/xxx"

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100
