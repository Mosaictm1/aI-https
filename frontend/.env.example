# ============================================
# AI-HTTP Frontend Environment Variables
# ============================================
# Copy this file to .env.local and fill in the values

# ============================================
# API Configuration
# ============================================
# Development
VITE_API_URL=http://localhost:4000

# Production (Render)
# VITE_API_URL=https://ai-http-backend.onrender.com

# ============================================
# WebSocket Configuration
# ============================================
# Development
VITE_SOCKET_URL=http://localhost:4000

# Production (Render)
# VITE_SOCKET_URL=https://ai-http-backend.onrender.com

# ============================================
# App Configuration
# ============================================
VITE_APP_NAME="AI-HTTP"
VITE_APP_DESCRIPTION="مساعد HTTP الذكي لـ n8n"

# ============================================
# Feature Flags (Optional)
# ============================================
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_TEMPLATES=true
VITE_ENABLE_REALTIME=true
